{
    "openapi": "3.0.0",
    "info": {
        "title": "RentalX Documentation",
        "description": "This is an awesome api but a bad description",
        "version": "1.0.0",
        "contact":{
            "email":"rychell@gmail.com"
        }
    },
    "paths":{
        "/categories": {
            "post":{
                "tags": ["Category"],
                "summary":"Create a category",
                "description": "Use this to create a new Category",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "SUV",
                                    "description": "Utilit√°rio esportivo"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "500":{
                        "description": "Error"
                    }
                }
            },
            "get":{
                "tags": ["Category"],
                "summary": "List all categories",
                "description": "List all categories",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "type":"object",
                                        "properties":{
                                            "name":{
                                                "type": "string"
                                            },
                                            "description":{
                                                "type":"string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/categories/import":{
            "post":{
                "tags": ["Category"],
                "summary": "Import a list of categories",
                "description": "Import a list of categories from a .csv file",
                "requestBody": {
                    "content": {
                        "multipart/form-data":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "file":{
                                        "type":"string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    }
                }
            }
        },
        "/specifications":{
            "post":{
                "tags": ["Specifications"],
                "description": "Use this to create a new specification",
                "summary": "Create a specification",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref": "#definitions/Specification"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description": "Specification already exists"
                    }
                }
            }
        }
    },
    "definitions":{
        "Specification":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "description":{
                    "type":"string"
                }
            }
        }
    }
}